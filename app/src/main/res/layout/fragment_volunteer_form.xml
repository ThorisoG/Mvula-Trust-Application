<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:gravity="center"
    tools:context=".Volunteer_form">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#00355E">

        <TextView
            android:id="@+id/textView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="10dp"
            android:text="Volunteer Form"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/userName"
            android:layout_width="450dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/shape_background"
            android:hint="Full Name:"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/idnum"
            android:layout_width="450dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/shape_background"
            android:hint="ID Number: "
            android:inputType="number"
            android:padding="15dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/cellno"
            android:layout_width="450dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_background"
            android:hint="Phone Number: "
            android:inputType="number"
            android:padding="15dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="450dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_background"
            android:hint="Email Address: "
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="450dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_background"
            android:hint="Home Address: "
            android:inputType="textPostalAddress"
            android:padding="15dp"
            android:textSize="20sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="450dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/auto_complete1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/item_label"
                android:inputType="none"
                android:text=""
                android:textSize="20sp"
                android:contentDescription="Choose the program you want participate in"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/auto_complete2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Qualification"
                android:inputType="none"
                android:text=""
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="690dp"
            android:text="Upload CV"
            android:textSize="19dp"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/uploadButton"
            android:src="@drawable/upload_file_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="720dp"
            android:background="#00000000"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginTop="690dp"
            android:text="Upload Qualification"
            android:textSize="19dp"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/uploadButton1"
            android:src="@drawable/upload_file_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="720dp"
            android:background="#00000000"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="800dp"
            android:textSize="13sp"
            android:text="All uploaded documents must be less than 2 MB in size, and in pdf, doc, docx, xls, xlsx, jpg, jpeg and png format" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:contentDescription="Click on program for more details"
            android:background="@drawable/button_bg2"
            android:layout_marginTop="880dp"
            android:layout_marginStart="180dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Apply"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="25sp"
            android:layout_marginTop="890dp"
            android:layout_marginStart="230dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_settings"
    android:background="@drawable/settings_bg">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/settings_bg">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="160dp"
                    android:layout_height="170dp"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/image_user"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView17">

                    <ImageView
                        android:id="@+id/account"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:padding="2dp"
                        app:srcCompat="@drawable/accounts_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/account"
                        android:text="Account"
                        android:textColor="@color/blue"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/next1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="143dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="2dp"
                        android:contentDescription="Click to open this setting"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/next_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout1">

                    <ImageView
                        android:id="@+id/notification"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:padding="2dp"
                        app:srcCompat="@drawable/notifications_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/notification"
                        android:text="Notifications"
                        android:textColor="@color/blue"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/next2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="143dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="2dp"
                        android:contentDescription="Click to open this setting"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/next_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

                    <ImageView
                        android:id="@+id/customize"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:padding="2dp"
                        app:srcCompat="@drawable/paintbrush" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/customize"
                        android:text="Personalize"
                        android:textColor="@color/blue"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/next3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="143dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="2dp"
                        android:contentDescription="Click to open this setting"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/next_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

                    <ImageView
                        android:id="@+id/report"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:padding="2dp"
                        app:srcCompat="@drawable/report_problem_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/report"
                        android:text="Report a problem"
                        android:textColor="@color/blue"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/next4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="143dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="2dp"
                        android:contentDescription="Click to open this setting"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/next_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:padding="2dp"
                        android:rotation="-36"
                        app:srcCompat="@drawable/send_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/share"
                        android:text="Share"
                        android:textColor="@color/blue"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/next5"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="143dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="2dp"
                        android:contentDescription="Click to open this setting"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/next_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout5">

                    <ImageView
                        android:id="@+id/help"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:padding="2dp"
                        app:srcCompat="@drawable/help_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/help"
                        android:text="Help and Support"
                        android:textColor="@color/blue"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/next6"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="143dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="2dp"
                        android:contentDescription="Click to open this setting"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/next_icon" />
                </RelativeLayout>

                <!--dARK mODE TOGGLE-->


                <RelativeLayout
                    android:id="@+id/relativeLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout6">

                    <ImageView
                        android:id="@+id/logout"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:padding="2dp"
                        app:srcCompat="@drawable/poweroff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/logout"
                        android:text="Logout"
                        android:textColor="@color/blue"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </RelativeLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/chatbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="50dp"
        app:fabSize="normal"
        android:backgroundTint="@color/blue"
        app:elevation="6dp"
        android:src="@drawable/icon_message_2"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>